{% extends 'layout/layout.twig' %}

{% block content %}
    <div class="page-header">
        <h1>500 <small>an application error has occured</small></h1>
    </div>

    <p>
    <div class="alert bg-danger text-danger">
        {{ exception.getMessage() ? exception.getMessage() : 'No message available.' }}
    </div>

    <h2>More information</h2>
    <dl>
        <dt>File:</dt>
        <dd>{{ exception.getFile() }}::{{ exception.getLine() }}</dd>
        <dt>Stack trace:</dt>
        <dd>
            <pre>{{ exception.getTraceAsString() }}</pre>
        </dd>
    </dl>

    {% if exception.getPrevious() %}
        <h2>Previous exception</h2>
    {% endif %}
{% endblock %}
